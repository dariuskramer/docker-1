docker run \
	--detach \
	--name spawning-pool \
	--restart=on-failure \
	--env MYSQL_ROOT_PASSWORD=Kerrigan \
	--env MYSQL_DATABASE=zerglings \
	--mount type=volume,source=hatchery,target=/var/lib/mysql \
	mysql

